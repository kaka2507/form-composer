{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/@form-composer/*"
  ],
  "scripts": {
    "build-core": "yarn workspace @form-composer/core build",
    "build-fields": "yarn workspace @form-composer/fields build",

    "watch-core": "yarn workspace @form-composer/core watch",
    "watch-fields": "yarn workspace @form-composer/fields watch",

    "clean-core": "yarn workspace @form-composer/core clean",
    "clean-fields": "yarn workspace @form-composer/fields clean",
    "clean-demo": "yarn workspace demo clean",

    "build": "yarn build-core && yarn build-fields",
    "clean": "rm -rf node_modules && yarn clean-core && yarn clean-fields && yarn clean-demo",
    "start-demo": "yarn workspace demo start"
  }
}
